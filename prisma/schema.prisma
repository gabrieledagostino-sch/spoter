// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tracks {
  id Int
  discovery Discovery @relation(fields: [discoveryId], references: [id])
  discoveryId Int
  @@id(fields: [id, discoveryId])
}

model Discovery {
  id Int @id @default(autoincrement())
  discoveryTipe String
  discoveryParam String? 
  createdAt DateTime @default(now())
  tracks Tracks[]
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model Session {
  id String @id
  spotifyToken String?
  token String
  refreshToken String
  createdAt DateTime @default(now())
  refreshedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id])
  userId Int
  valid Boolean @default(true)
}

model SpotifyInfo {
  user User @relation(fields: [userId], references: [id])
  userId Int @id
  authorizationGiven Boolean @default(false)
  token String
  refreshToken String
}

model User {
  id Int @id @default(autoincrement())
  username String? @unique
  email String? @unique
  password String?
  spotifyCreds SpotifyInfo?
  sessions Session[]
  discoveries Discovery[]
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}