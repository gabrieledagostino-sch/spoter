// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Track {
  id String @id
  name String
  artist String
  audioUrl String
  generes String[]
  discoverySessionId Int
  discoverySession DiscoverySession @relation(fields: [discoverySessionId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model DiscoverySession {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  refreshedAt DateTime @updatedAt
  userId String
  user User @relation(fields: [userId], references: [id])
  tracks Track[]
  session Session?
}

model Session {
  id String @db.Char(16) @id
  refreshToken String
  createdAt DateTime @default(now())
  refreshedAt DateTime @updatedAt
  userId String
  user User @relation(fields: [userId], references: [id])
  currentDiscovery DiscoverySession? @relation(fields: [currentDiscoveryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  currentDiscoveryId Int? @unique
  isValid Boolean @default(true)
}

model User {
  id String @id
  username String
  country String
  profilePicUrl String?
  createdAt DateTime @default(now())
  nPlaylists Int @default(0)
  nExports Int @default(0)
  nTracke Int @default(0)
  discSessions DiscoverySession[]
  sessions Session[]
}